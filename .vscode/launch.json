{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet build",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/Debug/netcoreapp1.1/my-dotnet-app.dll",
            "args": []
        },
        {
            "name": ".NET Core launch (VSCE)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "vsce service exec -t build",
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}",
                "pipeProgram": "vsce",
                "windows": {
                    "pipeProgram": "vsce.cmd"
                },
                "pipeArgs": [
                    "-c",
                    "develop.vscode",
                    "service",
                    "exec",
                    "-t",
                    "debug"
                ],
                "quoteArgs": false,
                "debuggerPath": "../vsdbg/vsdbg"
            },
            "cwd": "/src",
            "program": "/src/bin/Debug/netcoreapp1.1/my-dotnet-app.dll",
            "sourceFileMap": {
                "/src": "${workspaceRoot}"
            }
        }
    ]
}
